[color]
  ui = auto

[alias]
  st = status
  sta = status
  stat = status
  cm = commit
  cma = commit -a
  df = diff
  ls = ls-files
  ll = ls-files -v
  l = log
  ln = log --name-status
  logn = log --name-status
  # https://stackoverflow.com/a/34467298
  lg = lg1
  lg1 = lg1-specific --all
  lg2 = lg2-specific --all
  lg3 = lg3-specific --all
  lg1-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
  lg2-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
  lg3-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset) %C(bold cyan)(committed: %cD)%C(reset) %C(auto)%d%C(reset)%n''          %C(white)%s%C(reset)%n''          %C(dim white)- %an <%ae> %C(reset) %C(dim white)(committer: %cn <%ce>)%C(reset)'
  mas = checkout master
  master = checkout master
  dev = checkout develop
  develop = checkout develop
  amend = commit --amend
  unadd = reset HEAD
  unstage = reset HEAD
  # https://yulii.github.io/git-wip-alias-20160206.html
  wip = "commit --allow-empty -m '[ci skip] wip commit'"
  br = branch
  name = config --get user.name
  mail = config --get user.email
  getname = name
  getmail = mail
  setname = config --local --add user.name
  setmail = config --local --add user.email

[include]
  path = ~/.gitconfig_user

[core]
  excludesfile = ~/.gitignore_global
#  editor = emacsclient -t -a=\\\"\\\"
  editor = emacs -q

[pager]
  # EUC-JP などの文字化け回避
  diff = nkf -w | less
  log = nkf -w | less
  show = nkf -w | less